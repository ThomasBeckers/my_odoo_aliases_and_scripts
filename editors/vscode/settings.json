{
    "workbench.colorTheme": "Monokai",
    "editor.fontFamily": "'Operator Mono Lig','Operator Mono','Fira Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures" : true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "comment",
            "settings": {
              "fontStyle": "italic",
            },
          },
          {
            "scope": "string.quoted.docstring.multi.python",
            "settings": {
                "foreground": "#88846fff",
                "fontStyle": "italic",
            },
          },
        ]
    },

    "[python]": {
        "editor.rulers": [
            79,
            120,
        ],
    },

    "python.pythonPath": "/usr/local/bin/python3",

    "editor.fontSize": 12,
    "extensions.ignoreRecommendations": false,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true,
    },

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {"when": "$(basename).py"},
        "**/__pycache__": true,
    },
    "terminal.integrated.fontFamily": "'Monaco','Operator mono large','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "window.zoomLevel": 1,
    "terminal.integrated.scrollback": 10000,

    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--ignore=E501,E301,E302,E126,E123,E127,E128,E265,E305,W605",
    ],
    "disableLigatures.mode": "Line",
    "editor.cursorBlinking": "expand",
    "files.associations": {
        "*.xml": "html",
    },
    "git.autofetch": true,
    "telemetry.enableTelemetry": false,
    "workbench.editor.highlightModifiedTabs": true,
    "git-graph.commitDetailsViewLocation": "Docked to Bottom",
    "git-graph.dateFormat": "Relative",
    "git-graph.dateType": "Commit Date",
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.rendererType": "dom",
    "vim.visualstar": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"],
        },
        {
            "before": ["k", "k"],
            "after": ["<Esc>"],
        },
    ],
    "editor.renderWhitespace": "all",
    "editor.accessibilitySupport": "off",
    "editor.dragAndDrop": false,
    "editor.renderLineHighlight": "all",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorSurroundingLines": 4,
    "editor.minimap.renderCharacters": false,
    "workbench.settings.useSplitJSON": true,
    "zenMode.fullScreen": false,
    "debug.toolBarLocation": "docked",
    "editor.minimap.enabled": true,
}
