{
    // general style
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.activityBar.location": "top",
    "editor.fontFamily": "'Operator Mono','Monaco','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.fontFamily": "'Monaco','Operator mono large','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.cursorBlinking": "expand",
    "editor.renderWhitespace": "all",
    "editor.renderLineHighlight": "all",
    "editor.lineNumbers": "relative",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "debug.toolBarLocation": "docked",
    "editor.cursorSurroundingLines": 4,
    "editor.guides.bracketPairs": "active",
    "editor.stickyScroll.enabled": true,
    "window.zoomLevel": -1,
    "zenMode.fullScreen": false,
    // special styles
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic",
                },
            },
            {
                "scope": "string.quoted.docstring.multi.python",
                "settings": {
                    "foreground": "#88846fff", //monokai comment color
                    "fontStyle": "italic",
                },
            },
        ]
    },
    // general settings
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/venv": true,
    },
    "files.associations": {
        "*.xml": "html",
    },
    "terminal.integrated.scrollback": 10000,
    "git.autofetch": true,
    "git.autofetchPeriod": 300,
    "git.openRepositoryInParentFolders": "never",
    "git.confirmSync": false,
    "telemetry.telemetryLevel": "off",
    "editor.accessibilitySupport": "off",
    "editor.dragAndDrop": false,
    "editor.inlineSuggest.enabled": true,
    "workbench.settings.useSplitJSON": true,
    "files.defaultLanguage": "${activeEditorLanguage}",
    "workbench.editor.historyBasedLanguageDetection": true,
    // language specific settings
    "[python]": {
        "editor.rulers": [
            79,
            120,
        ],
    },
    "python.showStartPage": false,
    "python.languageServer": "Jedi",
    // extension settings
    "extensions.ignoreRecommendations": false,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true,
    },
    "gitlens.heatmap.locations": [
        "gutter"
    ],
    "gitlens.codeLens.enabled": false,
    "git-graph.commitDetailsView.location": "Docked to Bottom",
    "git-graph.date.format": "Relative",
    "git-graph.date.type": "Commit Date",
    "githubPullRequests.pullBranch": "never",
    "tabnine.experimentalAutoImports": true,
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "highlight-matching-tag.styles": {
        "opening": {
            "full": {
                "surround": "yellow",
            },
        },
    },
    //vim emulator
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ],
        },
        {
            "before": [
                "k",
                "k"
            ],
            "after": [
                "<Esc>"
            ],
        },
    ],
    // end of settings
    "dummy.setting": "Anything under this line should be moved to another section.",
}
